---
import '../styles/global.css';

const { title = "Expert Couvreur Grand Est | Réparation & Rénovation de Toiture" } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- SEO Meta Tags -->
		<meta name="description" content="Expert en couverture dans le Grand Est. Devis gratuit sous 24h. Entreprise certifiée RGE. Réparation, rénovation, isolation thermique." />
		<meta name="keywords" content="couvreur, toiture, réparation toiture, rénovation toiture, Grand Est, Metz, Nancy, RGE, devis gratuit" />
		<link rel="canonical" href="https://toitureai.fr" />
		
		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Expert en couverture dans le Grand Est. Devis gratuit sous 24h. Entreprise certifiée RGE." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://toitureai.fr" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		
		<!-- Schema.org JSON-LD -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "RoofingContractor",
			"name": "ToitureAI",
			"url": "https://toitureai.fr",
			"telephone": "+33644993231",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "12 Rue de la République",
				"addressLocality": "Metz",
				"postalCode": "57000",
				"addressCountry": "FR"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": 49.1193,
				"longitude": 6.1757
			},
			"areaServed": {
				"@type": "GeoCircle",
				"geoMidpoint": {
					"@type": "GeoCoordinates",
					"latitude": 49.1193,
					"longitude": 6.1757
				},
				"geoRadius": "50000"
			},
			"priceRange": "€€",
			"openingHoursSpecification": {
				"@type": "OpeningHoursSpecification",
				"dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
				"opens": "08:00",
				"closes": "19:00"
			}
		})} />
	</head>
	<body>
		<slot />
	</body>
</html>
